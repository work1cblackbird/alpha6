Функция КатегорияИзНаименования(Наименование)
	
	Пробел = Найти(Наименование, " ");
	
	Если Пробел > 0 Тогда
		
		Возврат Лев(Наименование, Пробел - 1);
		
	КонецЕсли;
	
	Возврат Наименование;
	
