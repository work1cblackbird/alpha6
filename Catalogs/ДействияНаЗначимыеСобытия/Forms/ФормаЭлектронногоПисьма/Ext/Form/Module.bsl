			ТекущийОбъект.эпТекстПисьма = "";
		Иначе
			ТекущийОбъект.эпТекстПисьма = ТекстПисьма;
			ТекущийОбъект.эпТекстПисьмаПроизвольныйКод = "";
		КонецЕсли;
		
	КонецЕсли;
	
