	СтандартнаяОбработка = Ложь;
	Если ТипЗнч(ВыбранноеЗначение) = Тип("Строка") Тогда
		
		Объект.АвторПроизвольныйКод = ВыбранноеЗначение;
		Объект.Автор = "<" + НСтр("ru = 'Произвольное выражение'")+ ">";
