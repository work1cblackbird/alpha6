&НаСервере
Процедура УправлениеДиалогомНаСервере()
	// Вызываем общий обработчик действия
	УправлениеДиалогомДокументаСервер.УправлениеДиалогомНаСервере(ЭтотОбъект);
	// Причина отказа доступна только при соответствующем событии
	ПричинаОтказаДоступна              = (Объект.Статус = Справочники.СтатусыРабочегоЛиста.Отказ);
	Элементы.ПричинаОтказа.Доступность = ПричинаОтказаДоступна;
	
	// Если это новый документ, то его статус обязательно должен быть "Создан",
	// поэтому запрещаем изменять статус.
	Если НЕ ЗначениеЗаполнено(Объект.Ссылка) Тогда
		Если Объект.Статус <> Справочники.СтатусыРабочегоЛиста.Создан Тогда
			Объект.Статус = Справочники.СтатусыРабочегоЛиста.Создан;
			ЭтотОбъект.Модифицированность = Ложь;
		КонецЕсли;
	
		Элементы.Статус.Доступность = Ложь;
	Иначе
		Элементы.Статус.Доступность = Истина;
	КонецЕсли;
	// Заполним представление валют на форме
	Элементы.НадписьВалютыПервоначальногоВзноса.Заголовок = Объект.ВалютаДокумента;
	Элементы.НадписьВалютыСтоимости.Заголовок             = Объект.ВалютаДокумента;
	Элементы.НадписьВалютыСуммыКредита.Заголовок          = Объект.ВалютаДокумента;
	
