		КонецЕсли;
		// добавляем строку
		НоваяСтрока = Объект.Товары.Добавить();
		НоваяСтрока.Номенклатура = Выборка.Ссылка;
		// отработаем изменение номенклатуры
		Документы.ИзменениеАссортиментаПодразделения.ТоварыНоменклатураПриИзменении(Объект, НоваяСтрока, ПараметрыДействия);
