&НаКлиенте
Процедура ДобавитьОперацию(Команда)
	
	НоваяСтрока = ДанныеОтчета.ПолучитьЭлементы().Добавить();
	НоваяСтрока.НомерОперации = ДанныеОтчета.ПолучитьЭлементы().Количество();
	НоваяСтрока.ИдентификаторСтроки = Новый УникальныйИдентификатор;
	НоваяСтрока.ЭтоСтрокаРНПТ = Ложь;
	Элементы.ДанныеОтчета.ТекущаяСтрока = НоваяСтрока.ПолучитьИдентификатор();
	Элементы.ДанныеОтчета.ТекущийЭлемент = Элементы.ДанныеОтчетаДатаОперации;
	
КонецПроцедуры

&НаКлиенте
Процедура ДобавитьРНПТ(Команда)
	
	// Найдем родителя для строки
	Если ДанныеОтчета.ПолучитьЭлементы().Количество() = 0 Тогда
		ОбщегоНазначенияКлиент.СообщитьПользователю(
			НСтр("ru = 'Сначала необходимо  добавить строку операции.'")
		);
		Возврат;
	КонецЕсли;
	
	ТекущийРодитель = Элементы.ДанныеОтчета.ТекущиеДанные.ПолучитьРодителя();
	
	Если ТекущийРодитель = Неопределено Тогда
		// Стоим на строке с операцией
		НоваяСтрока = Элементы.ДанныеОтчета.ТекущиеДанные.ПолучитьЭлементы().Добавить();
	Иначе
		НоваяСтрока = ТекущийРодитель.ПолучитьЭлементы().Добавить();
	КонецЕсли;
	НоваяСтрока.ИдентификаторСтроки = Элементы.ДанныеОтчета.ТекущиеДанные.ИдентификаторСтроки;
	НоваяСтрока.ЭтоСтрокаРНПТ = Истина;
	
	Элементы.ДанныеОтчета.ТекущаяСтрока = НоваяСтрока.ПолучитьИдентификатор();
	Элементы.ДанныеОтчета.ТекущийЭлемент = Элементы.ДанныеОтчетаРНПТ;
	
КонецПроцедуры

