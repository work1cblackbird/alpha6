&НаКлиенте
Процедура ТоварыВыбор(Элемент, ВыбраннаяСтрока, Поле, СтандартнаяОбработка)
	
	ТекущиеДанные = Элементы.Товары.ТекущиеДанные;
	
	Если Элемент.ТекущийЭлемент.Имя = "ТоварыСпособРаспределенияЗаказов" И ТекущиеДанные <> Неопределено Тогда
		
		Если Не ЗначениеЗаполнено(ТекущиеДанные.Номенклатура) Тогда
			
			Возврат;
			
		КонецЕсли;
		
		КонтекстРаспределения = Новый Структура();
		КонтекстРаспределения.Вставить("Проведен",                   Не Объект.Ссылка.Пустая());
		КонтекстРаспределения.Вставить("ДатаДокумента",              Объект.Дата);
		КонтекстРаспределения.Вставить("Контрагент",                 Объект.Контрагент);
		КонтекстРаспределения.Вставить("СпособРаспределенияЗаказов", ТекущиеДанные.СпособРаспределенияЗаказов);
		КонтекстРаспределения.Вставить("Номенклатура",               ТекущиеДанные.Номенклатура);
		КонтекстРаспределения.Вставить("ХарактеристикаНоменклатуры", ТекущиеДанные.ХарактеристикаНоменклатуры);
		КонтекстРаспределения.Вставить("ПодразделениеКомпании",      Объект.ПодразделениеКомпании);
		КонтекстРаспределения.Вставить("Организация",                Объект.Организация);
		КонтекстРаспределения.Вставить("РаспределениеТовара",        Объект.РаспределениеТовара);
		КонтекстРаспределения.Вставить("Товары",                     Объект.Товары);
		КонтекстРаспределения.Вставить("ДокументОснование",          Объект.ДокументОснование);
		
		ОткрытьФорму(
			"Документ.ПоступлениеТоваров.Форма.РаспределениеТовара",
			КонтекстРаспределения,
			ЭтотОбъект,
			,
			,
			,
			Новый ОписаниеОповещения("РаспределениеТовараОповещение", ЭтотОбъект),
			РежимОткрытияОкнаФормы.БлокироватьОкноВладельца
		);
		
	КонецЕсли;
	
	// Маркировка
	МаркировкаТоваровКлиент.ОткрытьСписокКодовМаркировки(
		ЭтотОбъект,
		ВыбраннаяСтрока,
		Поле,
		СтандартнаяОбработка
	);
	// Конец Маркировка
	
КонецПроцедуры

