	УправлениеДиалогомДокументаСервер.УправлениеДиалогомНаСервере(ЭтотОбъект);
	
	Если Объект.ХозОперация = Справочники.ХозОперации.СнятиеРаспределенияПоставщика Тогда
		Если Не Элементы.Найти("ТоварыЗаказПоставщика")=Неопределено Тогда
			УправлениеДиалогомСервер.УдалитьПараметрВыбора(Элементы.ТоварыЗаказПоставщика.ПараметрыВыбора, "Отбор.ПодразделениеПолучатель");
			УправлениеДиалогомСервер.ОбновитьПараметрВыбора(Элементы.ТоварыЗаказПоставщика.ПараметрыВыбора, "Отбор.Контрагент", Объект.Контрагент);
		КонецЕсли;
		Элементы.Контрагент.Заголовок = "Контрагент";
		Элементы.Контрагент.Подсказка = НСтр("ru = 'Покупатель, чьи заказы снимаются распределения'");
	ИначеЕсли Объект.ХозОперация = Справочники.ХозОперации.СнятиеРаспределенияВнутреннего Тогда
		Если Не Элементы.Найти("ТоварыЗаказПоставщика")=Неопределено Тогда
			УправлениеДиалогомСервер.УдалитьПараметрВыбора(Элементы.ТоварыЗаказПоставщика.ПараметрыВыбора, "Отбор.Контрагент");
			УправлениеДиалогомСервер.ОбновитьПараметрВыбора(Элементы.ТоварыЗаказПоставщика.ПараметрыВыбора, "Отбор.ПодразделениеПолучатель", Объект.Контрагент);
		КонецЕсли;
		Элементы.Контрагент.Заголовок = "Подразделение";
		Элементы.Контрагент.Подсказка = НСтр("ru = 'Подразделение компании, чьи заказы снимаются распределения'");
	КонецЕсли;
	
КонецПроцедуры 

