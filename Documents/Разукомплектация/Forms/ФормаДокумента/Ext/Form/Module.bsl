	// Вызываем общий обработчик события настройки параметров выбора
	УправлениеДиалогомДокументаСервер.НастроитьПараметрыВыбораЭлементовФормы(ЭтотОбъект);
	
	Если Не Элементы.Найти("ХарактеристикаКомплекта")=Неопределено Тогда
		Если Объект.Комплект.ТипНоменклатуры.ИспользованиеХарактеристик=1 Тогда
			// Характеристики хранятся для типов номенклатуры и в данном товаре ведется учет по характеристикам.
			УправлениеДиалогомСервер.ОбновитьПараметрВыбора(Элементы.ХарактеристикаКомплекта.ПараметрыВыбора,"Отбор.Владелец",Объект.Комплект.ТипНоменклатуры);
		ИначеЕсли Объект.Комплект.ТипНоменклатуры.ИспользованиеХарактеристик=2 Тогда
			// Характеристики хранятся для номенклатуры и в данном товаре ведется учет по характеристикам.
			УправлениеДиалогомСервер.ОбновитьПараметрВыбора(Элементы.ХарактеристикаКомплекта.ПараметрыВыбора,"Отбор.Владелец",Объект.Комплект);
		КонецЕсли;
	КонецЕсли;
	
КонецПроцедуры 

&НаСервере
Процедура УправлениеДиалогомНаСервере()
	// Вызываем общий обработчик действия
	УправлениеДиалогомДокументаСервер.УправлениеДиалогомНаСервере(ЭтотОбъект);
	// Произведем установку видимости колонок розничной цены
	ЗащищенныеФункцииСервер.УстановитьВидимостьКолонкиЦенаРозничная(ЭтотОбъект, Объект.СкладКомпании);
	
	ОбщегоНазначенияКлиентСервер.УстановитьСвойствоЭлементаФормы(Элементы,
		"КомандаЗаполненияТоварыЗаполнитьСуммыНДС", "Видимость", ЗначениеЗаполнено(Объект.ДокументОснование));
	
	Если Объект.Комплект.ТипНоменклатуры.ИспользованиеХарактеристик = 3 Тогда
		Элементы.ХарактеристикаКомплекта.Доступность=Ложь;
		Элементы.ХарактеристикаКомплекта.ОтметкаНезаполненного=Ложь;
		Если Объект.ХарактеристикаКомплекта<>Справочники.ХарактеристикиНоменклатуры.ПустаяСсылка() Тогда
			Объект.ХарактеристикаКомплекта=Справочники.ХарактеристикиНоменклатуры.ПустаяСсылка();
		КонецЕсли; 
	ИначеЕсли Объект.Комплект.ТипНоменклатуры.ИспользованиеХарактеристик=1 Тогда
		// Характеристики хранятся для типов номенклатуры и в данном товаре ведется учет по характеристикам.
		Элементы.ХарактеристикаКомплекта.Доступность=Истина;
		Элементы.ХарактеристикаКомплекта.ОтметкаНезаполненного=Истина;
	ИначеЕсли Объект.Комплект.ТипНоменклатуры.ИспользованиеХарактеристик=2 Тогда
		// Характеристики хранятся для номенклатуры и в данном товаре ведется учет по характеристикам.
		Элементы.ХарактеристикаКомплекта.Доступность=Истина;
		Элементы.ХарактеристикаКомплекта.ОтметкаНезаполненного=Истина;
	Иначе
		// соответственно ничего...
		Элементы.ХарактеристикаКомплекта.Доступность=Ложь;
		Если Объект.ХарактеристикаКомплекта<>Справочники.ХарактеристикиНоменклатуры.ПустаяСсылка() Тогда
			Объект.ХарактеристикаКомплекта=Справочники.ХарактеристикиНоменклатуры.ПустаяСсылка();
		КонецЕсли; 
	КонецЕсли;
	
	РазрешитьРедактированиеЦенИСумм = ПравоПользователя("РедактированиеЦенИСуммВНоменклатурныхТаблицах", Объект);
	РазрешитьИзменятьРозничныеЦены  = ПравоПользователя("ИзменятьРозничныеЦеныВПоступленииТоваров", Объект);
	РедактированиеДоступно 			= Объект.СкладКомпании.Розничный И НЕ ((НЕ РазрешитьРедактированиеЦенИСумм) 
										 ИЛИ (НЕ РазрешитьИзменятьРозничныеЦены) 
										 ИЛИ Объект.СкладКомпании.ТипЦенРозничнойТорговли.Рассчитывается);
	Элементы.ТоварыУстановитьНаценкуДляВсейТаблицы.Видимость = РедактированиеДоступно;
	
КонецПроцедуры 

&НаСервере
Процедура УстановитьУсловноеОформление()
 
	УправлениеДиалогомДокументаСервер.УстановитьУсловноеОформлениеХарактеристикНоменклатуры(ЭтотОбъект); 
	
	ОбменБП = ПроверитьСуществованиеОбменаСБП();   
	
	ЭлементУсловногоОформления = УсловноеОформление.Элементы.Добавить(); 

	ПолеЭлемента = ЭлементУсловногоОформления.Поля.Элементы.Добавить();
	ПолеЭлемента.Поле = Новый ПолеКомпоновкиДанных(Элементы.ТоварыКартинкаСтоимость.Имя);
	
    ПолеЭлемента = ЭлементУсловногоОформления.Поля.Элементы.Добавить();
	ПолеЭлемента.Поле = Новый ПолеКомпоновкиДанных(Элементы.ТоварыДоляСтоимости.Имя);

	ЭлементУсловногоОформления.Оформление.УстановитьЗначениеПараметра("Видимость", ОбменБП);

КонецПроцедуры 

&НаСервере
