		ТекстСообщения =СтрШаблон(
			НСтр("ru = 'При выгрузке документа в Бухгалтерию 3.0  по номенклатуре  ""%1"" не сформируется поступление на склад, т.к доля стоимости номенклатуры в комплекте < 0.1%%'"),
			Элемент.ТекущиеДанные.Номенклатура
		);
		ПоказатьПредупреждение(,ТекстСообщения, ,"Важно для синхронизации документа");
		
	КонецЕсли;
	
