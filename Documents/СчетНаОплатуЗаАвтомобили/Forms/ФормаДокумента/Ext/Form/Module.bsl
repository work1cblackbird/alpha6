		Если Параметры.ЗначенияЗаполнения.Свойство("СуммаВсего") Тогда
			
			Если НЕ Объект.Автомобили.Количество() = 0 Тогда
				
				ДоляСуммыАвтомомблия = ДоляСуммыАвтомобиля();
				
				Если ДоляСуммыАвтомомблия = 100 Тогда;
					
					Строка = Объект.Автомобили.Получить(0);
					Параметры.ЗначенияЗаполнения.Свойство("СуммаВсего", Строка.СуммаВсего);
