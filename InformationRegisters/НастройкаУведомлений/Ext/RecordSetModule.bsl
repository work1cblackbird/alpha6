Процедура ОбработкаПроверкиЗаполнения(Отказ, ПроверяемыеРеквизиты)
	
	Если НЕ ОбработкаСобытийРегистраСервер.ОбработкаПроверкиЗаполнения(ЭтотОбъект, Отказ, ПроверяемыеРеквизиты) Тогда
		
		Возврат;
		
	КонецЕсли;
	
	Для Каждого Запись Из ЭтотОбъект Цикл	
		
		Если Запись.КаналСвязи = Перечисления.ТипыКаналовОтправкиУведомлений.СМС Тогда
			
			Если НЕ ЗначениеЗаполнено(Запись.КонтактнаяИнформация) Тогда
				
				ОбщегоНазначения.СообщитьПользователю(
					НСтр("ru = 'Не указана контактная информация получателя сообщения'"),
					Запись.Контакт,
					"Запись.КонтактнаяИнформация",,
					Отказ);
				
			КонецЕсли;
			
		ИначеЕсли Запись.КаналСвязи = Перечисления.ТипыКаналовОтправкиУведомлений.ЭлектронноеПисьмо Тогда
			
			Если НЕ ЗначениеЗаполнено(Запись.КонтактнаяИнформация) Тогда
				
				ОбщегоНазначения.СообщитьПользователю(
					НСтр("ru = 'Не указана контактная информация получателя сообщения'"),
					Запись.Контакт,
					"Запись.КонтактнаяИнформация",,
					Отказ);
				
			КонецЕсли;
			
			Если НЕ ЗначениеЗаполнено(Запись.УчетнаяЗапись) Тогда
				
				ОбщегоНазначения.СообщитьПользователю(
					НСтр("ru = 'Не указана учетная запись от кого выполняется отправка электронного письма'"),
					Запись.УчетнаяЗапись,
					"Запись.УчетнаяЗапись",,
					Отказ);
				
			КонецЕсли;
			
		Иначе
			
			Если НЕ ЗначениеЗаполнено(Запись.Ответственный) Тогда
			
				ОбщегоНазначения.СообщитьПользователю(
					НСтр("ru = 'Не указан пользователь, которому необходимо отправить напоминание'"),
					Запись.Ответственный,
					"Запись.Ответственный",,
					Отказ);
				
			КонецЕсли;
			
		КонецЕсли;
		
	КонецЦикла;
	
