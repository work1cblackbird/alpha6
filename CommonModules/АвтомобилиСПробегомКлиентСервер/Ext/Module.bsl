// Вывод инфломационной надписи по выкупленному автомобилю
//
// Параметры:
//  Заказ - ДокументСсылка.ЗаказНаАвтомобиль - ссылка на заказ на автомобиль
// 
// Возвращаемое значение:
//  Строка - текст информационной надписи
//
Функция СформироватьНадписьTradeIn(Знач Заказ) Экспорт
	
	ЧастиСтроки = Новый Массив();
	ЧастиСтроки.Добавить("     ");
	Если НЕ ЗначениеЗаполнено(Заказ) Тогда
		
		ЧастиСтроки.Добавить(Новый ФорматированнаяСтрока(НСтр("ru = 'выбрать'"), , , , НадписьTradeInДействия().Выбрать));
		
	Иначе
		
		ЧастиСтроки.Добавить(Новый ФорматированнаяСтрока(АвтомобилиСПробегомВызовСервера.ПредставлениеЗаказНаАвтомобиль(Заказ),
			, , , ПолучитьНавигационнуюСсылку(Заказ)));
		ЧастиСтроки.Добавить(Новый ФорматированнаяСтрока(" "));
		ЧастиСтроки.Добавить(Новый ФорматированнаяСтрока(БиблиотекаКартинок.Очистить,
			, , , НадписьTradeInДействия().Сбросить));
		
	КонецЕсли;
	
	ФорматированныеЧастиСтроки = Новый ФорматированнаяСтрока(ЧастиСтроки);
	
	Возврат ФорматированныеЧастиСтроки;
	
КонецФункции

