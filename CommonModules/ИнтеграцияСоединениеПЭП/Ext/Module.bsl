// Прокси-конструктор соединения
// 
// Возвращаемое значение:
//  HTTPСоединение -  Соединение
//
Функция Соединение() Экспорт
	
	Возврат Новый Структура("Параметры, Соединение", ПараметрыСоединения(), СоздатьСоединение());
	
КонецФункции

// Возвращает структуру параметров соедниенния и настроек-констант
// 
// Возвращаемое значение:
//  Структура -  Параметры соединения:
// * ПисатьЛог - Булево - Признак записи в лог
//
Функция ПараметрыСоединения() Экспорт
	
	ПараметрыСоединения = HTTPТранспортПЭПКлиентСервер.СтруктураURI(ИнтеграцияПЭППереопределяемый.АдресСервераПЭП());
	ИнтеграцияПЭППереопределяемый.ПриОпределенииПараметровСоединения(ПараметрыСоединения);
	//@skip-check constructor-function-return-section
	Возврат ПараметрыСоединения;
	
КонецФункции

// Определяем модуль с интерфейсом для логирования.
// 
// Возвращаемое значение:
//  Произвольный - модуль журналирования
Функция МодульЖурналирования() Экспорт
	
	Возврат ИнтеграцияПЭППереопределяемый.МодульЖурналирования();
	
КонецФункции

#КонецОбласти

#Область СлужебныеПроцедурыИФункции

Функция СоздатьСоединение()
	
	Возврат HTTPТранспортПЭПКлиентСервер.СоздатьСоединениеНаОснованииURL(
		ИнтеграцияПЭППереопределяемый.АдресСервераПЭП()
	);
	
КонецФункции

#КонецОбласти
